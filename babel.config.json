{
    "presets": [
        [
            "@babel/preset-env",
            {
                "targets": [
                    "last 2 versions",
                    "safari >= 7"
                ],
                "useBuiltIns": "entry"
            }
        ],
        [
            "@babel/preset-react"
        ],
        [
            "@babel/preset-typescript"
        ]
    ],
    "plugins": [
        [
            "@babel/plugin-transform-runtime",
            {
                "absoluteRuntime": false,
                "corejs3": false,
                "helpers": true,
                "regenerator": true,
                "useESModules": false,
                "version": "7.0.0-beta.0"
            }
        ],
        [
            "@babel/plugin-transform-arrow-functions"
        ]
    ]
}